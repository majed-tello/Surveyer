@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script type="text/javascript">
    function func1() {
        var selectstate = $('#d1').val();  
        if (selectstate == '1') {
            $('#u1').show();
        }
        else { $('#u1').hide(); }

    }

    function func2() {
        var selectstate = $('#d2').val();
        if (selectstate == '1') {
            $('#u2').show();
        }
        else { $('#u2').hide(); }

    }
</script>