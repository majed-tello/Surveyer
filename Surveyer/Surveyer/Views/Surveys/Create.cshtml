        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.SurveyType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("SurveyType", null, htmlAttributes: new { @class = "form-control", @id = "d2", onchange = "func2()" })
