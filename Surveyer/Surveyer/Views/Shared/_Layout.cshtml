<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Surveyer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
  

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Surveyer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (((Surveyer.Models.User)Session["user"]) != null)
                    {
                        <li>@Html.ActionLink("My Surveys", "MySurveys", "Surveys")</li>
                    }
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>



                        @if (((Surveyer.Models.User)Session["user"]) != null)
                        {
                            <li style="padding-left:300px">
                                @if (((Surveyer.Models.User)Session["user"]).ImageURL == null)
                                {<img class="img-circle" src="@Url.Content("~/Imeges/defultuser.png")" alt="" height=50 width=50 /> }
                                else
                                {<img class="img-circle" src="@Url.Content($"~/Imeges/{((Surveyer.Models.User)Session["user"]).ImageURL}")" alt="" height=50 width=50 />}
                            </li>
                            <li>
                                @Html.ActionLink(((Surveyer.Models.User)Session["user"]).UserName, "MyNotefication", "UsersManagement")
                            </li>
                            <li>
                                @Html.ActionLink("Logout", "Logout", "UsersManagement")
                            </li>
                        }
                        else
                        {
                            <li style="padding-left:400px">@Html.ActionLink("Login", "Login", "UsersManagement")</li>
                        }
                    </ul>
                </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @Scripts.Render("~/bundles/jquery")

</body>
</html>
